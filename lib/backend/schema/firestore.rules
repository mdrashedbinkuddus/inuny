rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /studyrooms/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.creator;
      allow delete: if request.auth.uid == resource.data.creator;
    }

    match /Products/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.Seller;
      allow delete: if request.auth.uid == resource.data.Seller;
    }

    match /posts/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if resource.data.postUser == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.postUser == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /chats/{document} {
      allow create: if /databases/$(database)/documents/users/$(request.auth.uid) in request.resource.data.users;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in resource.data.users;
      allow write: if /databases/$(database)/documents/users/$(request.auth.uid) in resource.data.users;
      allow delete: if false;
    }

    match /chat_messages/{document} {
      allow create: if /databases/$(database)/documents/users/$(request.auth.uid) in get(request.resource.data.chat).data.users
&& /databases/$(database)/documents/users/$(request.auth.uid) == request.resource.data.user;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in get(resource.data.chat).data.users;
      allow write: if false;
      allow delete: if false;
    }

    match /Follower/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /postComments/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if false;
      allow delete: if false;
    }

    match /experience/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if resource.data.userAssociation == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.userAssociation == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /reviews/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if false;
      allow delete: if false;
    }

    match /notifications/{document} {
      allow create: if request.resource.data.UserNotif == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if resource.data.UserNotif == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if false;
      allow delete: if false;
    }

    match /Rooms/{document} {
      allow create: if request.auth != null;
      allow read: if resource.data.members == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if resource.data.members == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if request.auth.uid == resource.data.organizer;
    }

    match /orderPlaced/{document} {
      allow create: if request.auth != null;
      allow read: if resource.data.userRef == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if false;
      allow delete: if false;
    }
  }
}
